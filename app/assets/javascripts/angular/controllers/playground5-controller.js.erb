app.controller('Playground5Ctrl', ['$scope', function($scope){

  var data = [1,2,5,21,34,55,89]

  var width = 960;
  var height = 500;

  var outerRadius = height / 2 - 20
  var innerRadius = outerRadius / 3
  var cornerRadius = 10;

  var color = d3.scale.category20();

  // pie settings
  var pie = d3.layout.pie()
      .padAngle(.01);

  // arc settings
  var arc = d3.svg.arc()
    .padRadius(outerRadius)
    .innerRadius(innerRadius)
    .cornerRadius(5);

  // construct svg
  var svg = d3.select(".playground5")
    .attr("width", width)
    .attr("height", height)
    .append("g")
    .attr("transform", "translate(" + width / 2 + "," + height / 2 + ")");

  // draw section
  var path = svg.selectAll('path')
    .data(pie(data))
    .enter().append('path')
    .each(function(d){d.outerRadius = outerRadius - 20; d.tAngle = d.endAngle; d.endAngle = d.startAngle;})
    .attr("d", arc)
    .attr("fill", function(d){return color(d.data);})
    .on("mouseover", arcTween(outerRadius, 0))
    .on("mouseout", arcTween(outerRadius - 20, 150));

  // initial animation
  path.transition()
    .duration(300)
    .attrTween("d", function(d){
      var i = d3.interpolate(d.endAngle, d.tAngle);
      return function(t){
        d.endAngle = i(t);
        return arc(d);
      }
    })

  path.each(function(d, i){console.log(this)})

  // on hover change outerRadius 
  function arcTween(outerRadius, delay) {
    return function() {
      d3.select(this)
        .transition()
        .delay(delay)
        .attrTween("d", function(d){
          var i = d3.interpolate(d.outerRadius, outerRadius);
          return function(t) {
            d.outerRadius = i(t);
            return arc(d);
          };
        });
    };
  }
}]);
